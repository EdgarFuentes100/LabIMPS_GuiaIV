<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".SeleccionarTrabajador">

    <TextView
        android:id="@+id/txvMensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccione una opciÃ³n"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="25sp"/>

    <RadioGroup
        android:id="@+id/rbtTrabajador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txvMensaje"
        app:layout_constraintVertical_bias="0.10">

        <RadioButton
            android:id="@+id/rbTrabajadoHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trabajador por hora"/>

        <RadioButton
            android:id="@+id/rbTrabajadorCompleto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trabajador tiempo completo"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnContinuar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rbtTrabajador"
        android:text="Continuar" />

</androidx.constraintlayout.widget.ConstraintLayout>